{
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pip install .",
        "cwd": "apps/backend"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
            "forwardAllArgs": false
          }
        ],
        "cwd": "apps/backend"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python -m pip install .[test] && python -m pytest -v",
        "cwd": "apps/backend"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t \"$DOCKER_USERNAME/${REPO_NAME}_backend:$VERSION\" -t \"$DOCKER_USERNAME/${REPO_NAME}_backend:latest\" . && docker push \"$DOCKER_USERNAME/${REPO_NAME}_backend:$VERSION\" && docker push \"$DOCKER_USERNAME/${REPO_NAME}_backend:latest\"",
        "cwd": "apps/backend"
      },
      "dependsOn": ["build"]
    },
    "retag": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker buildx imagetools create --tag \"$DOCKER_USERNAME/${REPO_NAME}_backend:$VERSION\" --tag \"$DOCKER_USERNAME/${REPO_NAME}_backend:latest\" \"$DOCKER_USERNAME/${REPO_NAME}_backend:$LAST_VERSION\"",
        "cwd": "apps/backend"
      }
    }
  }
}